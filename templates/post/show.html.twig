{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
<section class="wrapper">
  <article class="post-details">
    <h1>{{ post.title }}</h1>
    {% if post.filename %}
      <figure> 
          <img src="{{ vich_uploader_asset(post, 'imageFile') | imagine_filter('medium') }}" alt="Image de l'article : {{ post.title }}">
      </figure>
    {% endif %}
    <div>
      {{ post.content|nl2br }}
      <span class="date">Posté le {{ post.formattedDate }}</span>
    </div>
    <a href="{{ path('posts_index') }}" class="button with-icon clear"><i class="fas fa-arrow-left"></i> Retour aux actualités</a>
    <div class="clear"></div>
  </article>
</section>

{% endblock %}