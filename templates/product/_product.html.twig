<article class="product">

  <a href="{{ path('products_show', {'slug': product.slug}) }}">
    {% if product.picture %}
      <img src="{{ vich_uploader_asset(product.picture, 'imageFile') | imagine_filter('productthumb') }}" alt="Image du produit {{ product.name }}">
    {% else %}  
      <img src="http://placehold.it/200x200" alt="Image par dÃ©faut">
    {% endif %}
  </a>

  <h4 class="product-title"><a href="{{ path('products_show', {'slug': product.slug}) }}">{{ product.name }}</a></h4>
  <span class="price">{{ product.formattedPrice }} &euro;</span>
  
</article>